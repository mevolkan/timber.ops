{% block html_head_container %}

{% include 'html-header.twig' %}
  {% block head %}
  {% endblock %}
  </head>
{% endblock %}
    <body class="page--detail">
      <header class="header" >
      {% block header %}
        
        <div class="wrapper">
          <div class="logo nav__logo">
            <a href="{{site.url}}"><img src="{{site.url}}/assets/images/logo.svg" alt="logo"/></a>
          </div>
          
        </div>
      {% endblock %}

      <nav role="navigation">
          <ul class="nav__list">
            <li class="nav__item"><a href="#">Episodes</a></li>
          </ul>
          <ul class="nav__list">
            <li class="nav__item"><a href="#">Episodes</a></li>
          </ul>
            {% include "menu.twig" with {'menu': menu.get_items} %}
         <!-- #nav -->
          <ul class="nav__social">
            <li><a href="#" class="nav_social__item"><i class="fab fa-google-play"></i></a></li>
            <li><a href="#" class="nav_social__item"><i class="fab fa-itunes-note"></i></a></li>
            <li><a href="#" class="nav_social__item"><i class="fas fa-rss-square"></i></a></li>
          </ul>
        </nav>
    </header>
      <section class="site">
        <div id="site__bg"></div>
        <div class="left">
          <label for="" class="site__label">Episode #1</label>
          <h1 class="site__title site__title--separator">{{post.title}} </h1>
        </div>
        <div class="right">
          <img src="assets/images/photos/original/1.png" alt="" class="episode__image">
          <div class="audio-player site__playbar">
            <div class="loading">
              <div class="spinner"></div>
            </div>
            <button class="play-pause-btn play"></button>
            <div class="controls">
              <span class="current-time">0:00</span>
              <div class="slider" data-direction="horizontal">
                <div class="progress">
                  <div class="pin" id="progress-pin" data-method="rewind"></div>
                </div>
              </div>
              <span class="total-time">0:00</span>
            </div>

            <audio preload="true">
              <source src="wp-content/themes/timber/assets/audio/example.ogg" type="audio/ogg" />
              <source src="wp-content/themes/timber/assets/audio/example.mp3" type="audio/mpeg">
            </audio>
          </div>
          <h4 class="site__secondary_title">Show Notes</h4>
          <p class="site__description">{{ post.content}}</p>
          <div class="site__navigation">
            <!-- toggle on the previous as needed -->
            <a href="#" class="site__navigation_items site__navigation_items--left hidden">
              <label for="">Previous Episode</label>
              <h4>Dylan Perry</h4>
            </a>
            <a href="#" class="site__navigation_items site__navigation_items--right">
              <label for="">Next Episode</label>
              <h4>Dylan Perry</h4>
            </a>
          </div>
        </div>
      </section>
      <script src="{{site.url}}/assets/js/dropcast.js"></script>
      <script src="{{site.url}}/assets/js/player.js"></script>
    </body>
</html>